{
  "name": "kss-modern",
  "type": "module",
  "version": "0.0.19",
  "description": "Modern KSS compatible styleguide generator",
  "main": "./dist/node/lib/index.mjs",
  "types": "./dist/node/lib/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && unbuild",
    "dev": "bun run build && deno run --unstable-sloppy-imports --allow-all index.ts",
    "lint": "eslint {lib,client}",
    "release": "bun run lint && bumpp"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@antfu/utils": "^9.2.1",
    "@biomejs/js-api": "^3.0.0",
    "@biomejs/wasm-nodejs": "^2.2.4",
    "@shikijs/markdown-it": "^3.13.0",
    "chokidar": "^4.0.3",
    "fs-extra": "^11.3.2",
    "keyux": "^0.11.3",
    "markdown-it-async": "^2.2.0",
    "motion": "^12.23.22",
    "pug": "^3.0.3",
    "shiki": "^3.13.0",
    "tinyglobby": "^0.2.15"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@tailwindcss/vite": "^4.1.13",
    "@types/bun": "latest",
    "@types/fs-extra": "^11.0.4",
    "bumpp": "^10.2.3",
    "eslint": "^9.36.0",
    "html-validate": "^10.0.0",
    "unbuild": "^3.6.1",
    "vite": "^7.1.7"
  }
}
