{
  "name": "kss-modern",
  "version": "0.0.10",
  "type": "module",
  "description": "Modern KSS compatible styleguide generator",
  "main": "./dist/node/lib/index.mjs",
  "types": "./dist/node/lib/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && unbuild",
    "dev": "bun run build && deno run --unstable-sloppy-imports --allow-all index.ts",
    "lint": "eslint {lib,client}",
    "release": "bun run lint && bumpp"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@antfu/utils": "^9.2.0",
    "@biomejs/js-api": "^1.0.0",
    "@biomejs/wasm-nodejs": "^2.0.6",
    "@shikijs/markdown-it": "^3.7.0",
    "chokidar": "^4.0.3",
    "fs-extra": "^11.3.0",
    "keyux": "^0.11.2",
    "markdown-it-async": "^2.2.0",
    "motion": "^12.20.2",
    "pug": "^3.0.3",
    "shiki": "^3.7.0",
    "tinyglobby": "^0.2.14"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.16.1",
    "@tailwindcss/vite": "^4.1.11",
    "@types/bun": "latest",
    "@types/fs-extra": "^11.0.4",
    "bumpp": "^10.2.3",
    "eslint": "^9.30.0",
    "html-validate": "^9.7.1",
    "unbuild": "^3.5.0",
    "vite": "^6.0.7"
  }
}
